<div class="container top" id="sticker">
<h2 class="mb-2""">Log in</h2>
<div id="error-message">
  <% if (alerts && alerts.error) { %>
    <% alerts.error.forEach(message =>{ %>
    <div class="alert alert-danger mb-2">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }) %>
  <% } %>
</div>
<form action="/login" method="POST">
  <label for="email">E-mail  :</label>
  <input type="email" id="email" name="email" required>
  <br><br>
  <label for="password">Password:</label>
  <input type="password" id="password" name="password" required>
  <br><br>
  <!-- <a href="/home" class="button" type="submit">Log in </a> -->
  <button class="button" type="submit">Log in</button><br>
  <a href="/signup"><h6>Woops, I don't have an account yet.</h6></a>
</form>
