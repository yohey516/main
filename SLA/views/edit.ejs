<div class="container top" id="sticker">
<h2 id ="green">Update Item Infos</h2>
<div style="position: relative;"></div>
<form action="/items/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <div >
    <div style="display: flex; flex-direction: column; align-items: flex-start; margin-left: 100px;">
    <br>
    <label for="name">Name of item:</label>
    <input type="text" id="name" name="name" value="<%= item.name %>" required>
    <br>
    <label for="quantity">Quantity of item:</label>
    <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" required>
    <br>
    <label for="image">Update Image:</label>
    <input type="file" id="image" name="image">
    <br>
    </div>
    <button class="button" type="button" onclick="cancel()">Cancel</button>
    <button class="button" type="submit" id="black" >Update</button>
  </div>
</form>
</div>
</div>
<script>
  function cancel() {
    window.location.href = "/home";
  }
</script>



